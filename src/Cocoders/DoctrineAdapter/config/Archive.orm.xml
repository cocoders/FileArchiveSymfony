<?xml version="1.0" encoding="UTF-8" ?>
<doctrine-mapping xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping"
                  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                  xsi:schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping
        http://doctrine-project.org/schemas/orm/doctrine-mapping.xsd">

    <entity name="Cocoders\DoctrineAdapter\Archive" table="archive" repository-class="Cocoders\DoctrineAdapter\ArchiveRepository">
        <id name="id" type="integer">
            <generator strategy="AUTO" />
        </id>
        <field name="name" type="string" length="100" />
        <many-to-many field="files" target-entity="Cocoders\DoctrineAdapter\ArchiveFile">
            <join-table name="archive_files">
                <join-columns>
                    <join-column name="archive_id" referenced-column-name="id" />
                </join-columns>
                <inverse-join-columns>
                    <join-column name="archive_file_id" referenced-column-name="id" unique="true" />
                </inverse-join-columns>
            </join-table>
        </many-to-many>
    </entity>
</doctrine-mapping>
